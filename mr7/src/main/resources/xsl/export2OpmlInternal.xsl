<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform"  
                version="1.0">

    <xsl:output method="xml" indent="yes"/>

    <xsl:template match="/">
        <xsl:text></xsl:text>
        <xsl:apply-templates select="resource/data/conceptTreeProperty">
        </xsl:apply-templates>
    </xsl:template>
    
    <xsl:template match="resource/data/conceptTreeProperty">
      <opml version="1.1">
       <head>
         <title>OPML generated by MindRaider (http://mindraider.sourceforge.net)</title>
       </head>
       <body>    
        <outline>
         <xsl:attribute name="title">
           <xsl:value-of select="./resource/data/labelProperty/text()"/>
         </xsl:attribute>
         <xsl:attribute name="text">
           <xsl:value-of select="./resource/data/labelProperty/text()"/>
         </xsl:attribute>

           <xsl:apply-templates select="conceptTreeProperty">
           </xsl:apply-templates>

        </outline>
       </body>
      </opml>

    </xsl:template>



    <xsl:template match="conceptTreeProperty">
         <outline>
           <xsl:attribute name="title">
             <xsl:value-of select="./resource/data/labelProperty/text()"/>
           </xsl:attribute>
           <xsl:attribute name="text">
             <xsl:value-of select="./resource/data/labelProperty/text()"/>
           </xsl:attribute>
           <xsl:attribute name="xmlUrl">
             <xsl:value-of select="./resource/metadata/uri/text()"/>
           </xsl:attribute>
           <!-- TODO: add attachments in here in the future -->

         <outline>
           <xsl:attribute name="title">
             <xsl:value-of select="./resource/data/labelProperty/text()"/>
           </xsl:attribute>
           <xsl:attribute name="text">
             <xsl:value-of select="./resource/data/annotationProperty/text()"/>
           </xsl:attribute>
           <xsl:attribute name="description">
             <xsl:value-of select="./resource/data/annotationProperty/text()"/>
           </xsl:attribute>
           <xsl:attribute name="xmlUrl">
             <xsl:value-of select="./resource/metadata/uri/text()"/>
           </xsl:attribute>
           <xsl:attribute name="isComment">
             <xsl:value-of select="'true'"/>
           </xsl:attribute>
         </outline>

           <xsl:apply-templates select="./conceptTreeProperty">
           </xsl:apply-templates>

         </outline>

    </xsl:template>

</xsl:stylesheet>
